{
  "name": "@vulppi/data-sync",
  "version": "0.1.4",
  "license": "MIT",
  "private": false,
  "author": {
    "name": "Renato Rodrigues",
    "email": "renato@vulppi.dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vulppi-dev/libs.git",
    "directory": "libs/data-sync"
  },
  "keywords": [
    "data synchronization",
    "real-time",
    "data management",
    "synchronization",
    "server",
    "websocket",
    "ws",
    "storage",
    "collaboration"
  ],
  "type": "module",
  "main": "dist/index.cjs",
  "types": "dist/index.d.ts",
  "module": "dist/index.mjs",
  "scripts": {
    "build": "run-s clear build-all",
    "build-all": "run-p build:*",
    "clear": "rimraf dist",
    "build:esm": "esbuild --bundle --minify --target=node18 --platform=node --format=esm --packages=external --out-extension:.js=.mjs --outdir=dist src/index.ts",
    "build:cjs": "esbuild --bundle --minify --target=node18 --platform=node --format=cjs --packages=external --out-extension:.js=.cjs --outdir=dist src/index.ts",
    "build:types": "tsc",
    "test": "node --loader esbuild-register/loader -r esbuild-register test/index.ts",
    "pub": "npm publish --access public",
    "pub:tag": "npm publish --access public --tag"
  },
  "dependencies": {
    "@vulppi/toolbelt": "^0.6.2",
    "esbuild": "^0.17.19",
    "just-diff": "^6.0.2",
    "lodash": "^4.17.21",
    "ws": "^8.13.0"
  },
  "devDependencies": {
    "@types/lodash": "^4.14.195",
    "@types/node": "^20.2.5",
    "@types/ws": "^8.5.4",
    "esbuild-register": "^3.4.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
