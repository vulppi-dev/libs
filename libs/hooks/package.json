{
  "name": "@vulppi/react-hooks",
  "version": "0.21.1",
  "private": false,
  "author": {
    "name": "Renato Rodrigues",
    "email": "renato@vulppi.dev"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "esm/index.mjs",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vulppi-dev/libs.git",
    "directory": "libs/hooks"
  },
  "license": "MIT",
  "scripts": {
    "dev": "run-p dev:js dev:esm",
    "dev:js": "tsc -w",
    "dev:esm": "tsc --build tsconfig.esm.json -w",
    "build": "run-s clear build:all build:rename build:minify",
    "clear": "rimraf esm dist",
    "build:all": "run-p build:js build:esm",
    "build:js": "tsc",
    "build:esm": "tsc --build tsconfig.esm.json",
    "build:minify": "run-p build:minify:js build:minify:esm",
    "build:minify:js": "terser -c passes=3 -m -o dist/index.js dist/index.js",
    "build:minify:esm": "terser -c passes=3,ecma=2022 -m -o esm/index.mjs esm/index.mjs",
    "build:rename": "renamer --find /\\.js$/i --replace=.mjs esm/**",
    "pub": "npm publish --access public",
    "pub:all": "run-s build pub"
  },
  "devDependencies": {
    "@types/node": "^17.0.35",
    "npm-run-all": "^4.1.5",
    "renamer": "^4.0.0",
    "rimraf": "^3.0.2",
    "terser": "^5.13.1",
    "typescript": "^4.7.2"
  },
  "dependencies": {
    "@vulppi/react-use-async": "latest",
    "@vulppi/react-use-boolean": "latest",
    "@vulppi/react-use-click-outside": "latest",
    "@vulppi/react-use-debounce": "latest",
    "@vulppi/react-use-debounce-trigger": "latest",
    "@vulppi/react-use-fetch": "latest",
    "@vulppi/react-use-fork-ref": "latest",
    "@vulppi/react-use-imask": "latest",
    "@vulppi/react-use-interval": "latest",
    "@vulppi/react-use-is-mounted": "latest",
    "@vulppi/react-use-media-query": "latest",
    "@vulppi/react-use-rerender": "latest",
    "@vulppi/react-use-state-array": "latest",
    "@vulppi/react-use-state-debounce": "latest",
    "@vulppi/react-use-state-history": "latest",
    "@vulppi/react-use-state-local-storage": "latest",
    "@vulppi/react-use-string-mask": "latest",
    "@vulppi/react-use-timeout": "latest",
    "@vulppi/react-use-timer": "latest"
  }
}
