{
  "name": "@vulppi/data-sync-client",
  "version": "0.3.3",
  "type": "module",
  "license": "MIT",
  "private": false,
  "author": {
    "name": "Renato Rodrigues",
    "email": "renato@vulppi.dev"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vulppi-dev/libs.git",
    "directory": "libs/data-sync-client"
  },
  "keywords": [
    "data synchronization",
    "real-time",
    "data management",
    "synchronization",
    "client",
    "websocket",
    "ws",
    "storage",
    "collaboration",
    "valtio",
    "proxy",
    "store"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "require": "./dist/index.cjs",
      "import": "./dist/index.mjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "run-s clear build-all",
    "build-all": "run-p build:*",
    "clear": "rimraf dist",
    "build:esm": "esbuild --bundle --tree-shaking=true --platform=browser --format=esm --outfile=dist/index.mjs src/index.ts",
    "build:cjs": "esbuild --bundle --tree-shaking=true --platform=browser --format=cjs --outfile=dist/index.cjs src/index.ts",
    "build:types": "tsc",
    "test": "node --loader esbuild-register/loader -r esbuild-register test/index.ts",
    "pub": "npm publish --access public",
    "pub:tag": "npm publish --access public --tag"
  },
  "dependencies": {
    "@types/lodash": "^4.14.195",
    "@vulppi/toolbelt": "^0.6.2",
    "esbuild": "^0.17.19",
    "isomorphic-ws": "^5.0.0",
    "lodash": "^4.17.21",
    "valtio": "^1.10.5"
  },
  "devDependencies": {
    "@types/node": "^20.2.5",
    "esbuild-register": "^3.4.2",
    "npm-run-all": "^4.1.5",
    "rimraf": "^5.0.1",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
