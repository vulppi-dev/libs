{
  "exclude": ["node_modules", "**/*.test.*", "**/*.spec.*"],
  "include": ["src/**/*.ts"],
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "strict": true,
    "verbatimModuleSyntax": true,
    "moduleResolution": "node",
    "lib": ["ESNext", "DOM"],
    "target": "ESNext",
    "baseUrl": "src",
    "outDir": "dist"
  }
}
