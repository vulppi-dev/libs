{
  "name": "@vulppi/react-use-firebase",
  "version": "0.3.0",
  "description": "Hooks for firebase",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "module": "esm/index.js",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vulppi-studio/libs.git",
    "directory": "libs/use-firebase"
  },
  "keywords": [
    "firebase",
    "firebase-admin",
    "firestore",
    "react",
    "hook",
    "static"
  ],
  "author": {
    "name": "Renato Rodrigues",
    "email": "renato@vulppi.dev"
  },
  "license": "MIT",
  "scripts": {
    "clear": "rimraf dist esm",
    "build": "run-s clear build:all build:rename build:minify",
    "build:all": "run-p build:js build:esm",
    "build:js": "tsc",
    "build:esm": "tsc --build tsconfig.esm.json",
    "build:minify": "run-p build:minify:js build:minify:js:client build:minify:js:admin build:minify:esm build:minify:esm:client build:minify:esm:admin",
    "build:minify:js": "terser -c passes=3 -m -o dist/index.js dist/index.js",
    "build:minify:js:client": "terser -c passes=3 -m -o dist/client.js dist/client.js",
    "build:minify:js:admin": "terser -c passes=3 -m -o dist/admin.js dist/admin.js",
    "build:minify:esm": "terser -c passes=3,ecma=2022 -m -o esm/index.mjs esm/index.mjs",
    "build:minify:esm:client": "terser -c passes=3,ecma=2022 -m -o esm/client.mjs esm/client.mjs",
    "build:minify:esm:admin": "terser -c passes=3,ecma=2022 -m -o esm/admin.mjs esm/admin.mjs",
    "build:rename": "renamer --find /\\.js$/i --replace=.mjs esm/**",
    "dev": "run-p build:js build:esm",
    "dev:js": "tsc -w",
    "dev:esm": "tsc --build tsconfig.esm.json -w",
    "pub": "npm publish --access public",
    "pub:all": "run-s build pub"
  },
  "peerDependencies": {
    "firebase": "^9.x.x",
    "firebase-admin": "^10.x.x"
  },
  "devDependencies": {
    "@types/node": "^17.0.35",
    "@types/react": "^18.0.9",
    "firebase": "^9.8.1",
    "firebase-admin": "^10.2.0",
    "npm-run-all": "^4.1.5",
    "renamer": "^4.0.0",
    "rimraf": "^3.0.2",
    "terser": "^5.13.1",
    "typescript": "^4.7.2"
  }
}
