{
  "name": "@vulppi/tailwindcss",
  "version": "0.1.0",
  "description": "A collection of plugins for TailwindCSS.",
  "author": {
    "name": "Renato Rodrigues",
    "email": "renato@vulppi.dev"
  },
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vulppi-dev/libs.git",
    "directory": "libs/tailwindcss"
  },
  "keywords": [
    "style",
    "css",
    "tailwindcss",
    "tailwind",
    "vulppi",
    "plugins"
  ],
  "type": "module",
  "module": "./dist/index.mjs",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "tsc --watch --noEmit true --emitDeclarationOnly false",
    "build": "run-s clear build:*",
    "build:script": "bun ./scripts/build index",
    "clear": "rimraf dist",
    "pub": "npm publish --access=public --tag=latest"
  },
  "devDependencies": {
    "@types/node": "^20.14.10",
    "dts-bundle-generator": "^9.5.1",
    "esbuild": "^0.23.0",
    "npm-run-all": "^4.1.5",
    "rimraf": "^6.0.0",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.3"
  },
  "peerDependencies": {
    "tailwindcss": "^3.4.3"
  },
  "dependencies": {
    "@types/chroma-js": "^2.4.4",
    "chroma-js": "^2.4.2"
  }
}
