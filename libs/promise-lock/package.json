{
  "name": "@vulppi/promise-lock",
  "version": "0.0.2",
  "description": "A promise-based lock library for Vulppi",
  "author": {
    "name": "Renato Rodrigues",
    "email": "renato@vulppi.dev"
  },
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vulppi-dev/libs.git",
    "directory": "libs/promise-lock"
  },
  "keywords": [
    "vulppi",
    "lock",
    "promise",
    "promise-based",
    "promises",
    "locks",
    "locks-based",
    "locks-based"
  ],
  "type": "module",
  "module": "./dist/index.mjs",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "dev": "tsc --watch --noEmit true --emitDeclarationOnly false",
    "build": "bun ./scripts/build index",
    "clear": "rimraf dist",
    "pub": "npm publish --access=public --tag=latest"
  },
  "devDependencies": {
    "@types/node": "^20.14.12",
    "dts-bundle-generator": "^9.5.1",
    "esbuild": "^0.23.0",
    "rimraf": "^6.0.1",
    "typescript": "^5.5.4"
  }
}
