{
  "name": "@vulppi/tailwindcss",
  "version": "1.0.0",
  "description": "A collection of plugins for TailwindCSS.",
  "author": {
    "name": "Renato Rodrigues",
    "email": "renato@vulppi.dev"
  },
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vulppi-dev/libs.git",
    "directory": "libs/tailwindcss"
  },
  "keywords": [
    "style",
    "css",
    "tailwindcss",
    "tailwind",
    "vulppi",
    "plugins"
  ],
  "type": "module",
  "module": "./dist/index.mjs",
  "main": "./dist/index.cjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs"
    }
  },
  "scripts": {
    "dev": "tsc --watch --noEmit true --emitDeclarationOnly false",
    "build": "vpp build index",
    "pub": "npm publish --access=public --tag=latest"
  },
  "devDependencies": {
    "@types/node": "^22.13.0",
    "tailwindcss": "^4.0.3",
    "typescript": "^5.7.3",
    "vulppi": "^0.2.11"
  },
  "peerDependencies": {
    "tailwindcss": "^4.0.0"
  },
  "dependencies": {
    "@types/chroma-js": "^3.1.1",
    "chroma-js": "^3.1.2"
  }
}
