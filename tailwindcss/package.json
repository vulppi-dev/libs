{
  "name": "@vulppi/tailwindcss",
  "version": "2.0.0",
  "description": "A collection of plugins for TailwindCSS.",
  "author": {
    "name": "Renato Rodrigues",
    "email": "renato@vulppi.dev"
  },
  "license": "MIT",
  "private": false,
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vulppi-dev/libs.git",
    "directory": "libs/tailwindcss"
  },
  "keywords": [
    "style",
    "css",
    "tailwindcss",
    "tailwind",
    "vulppi",
    "plugins"
  ],
  "type": "module",
  "exports": {
    "./*": {
      "types": "./dist/*.d.ts",
      "import": "./dist/*.mjs",
      "require": "./dist/*.cjs"
    }
  },
  "scripts": {
    "dev": "tsc --watch --noEmit true --emitDeclarationOnly false",
    "build": "bun build:bundle && bun build:types",
    "build:bundle": "bun build src/*.ts --outdir dist --format esm",
    "build:types": "tsc --project tsconfig.json",
    "pub": "npm publish --access=public --tag=latest"
  },
  "devDependencies": {
    "@types/node": "^22.13.0",
    "tailwindcss": "^4.0.3",
    "typescript": "^5.7.3"
  },
  "peerDependencies": {
    "tailwindcss": "^4.0.3"
  }
}
